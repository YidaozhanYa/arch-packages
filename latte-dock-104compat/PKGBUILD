_pkgname=latte-dock
pkgname=latte-dock-104compat
pkgver=0.10.4
pkgrel=1
pkgdesc='A dock based on Plasma Frameworks, keep legacy 0.10.14 but built with new dependencies'
arch=(x86_64)
url='https://store.kde.org/p/1169519/'
license=(GPL)
depends=(plasma-framework knewstuff hicolor-icon-theme)
makedepends=(extra-cmake-modules)
source=(https://download.kde.org/stable/$_pkgname/$_pkgname-$pkgver.tar.xz)
sha256sums=('5d1a29f8c35c6de09c6e72f62ccd62ebb42f32e756dc28d66043cb913fea6c63')
provides=('latte-dock')
conflicts=('latte-dock' 'latte-dock-git')

build() {
  cmake -B build -S $_pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
